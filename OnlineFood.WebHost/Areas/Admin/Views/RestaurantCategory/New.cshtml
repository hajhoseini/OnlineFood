@using OnlineFood.WebHost.Areas.Admin.Controllers
@model OnlineFood.Application.DTOs.RestaurantCategory.RestaurantCategoryDTO
@{
    var controller = nameof(RestaurantCategoryController).Replace("Controller", "");
    var indexAction = nameof(RestaurantCategoryController.Index);
}

<div class="content-wrapper" style="min-height: 265.6px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>ایجاد دسته بندی فروشنده</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="#">خانه</a></li>
                        <li class="breadcrumb-item active">ایجاد دسته بندی فروشنده</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="container-fluid">

            <div class="row">
                <div class="col-md-8">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">ایجاد دسته بندی جدید برای فروشنده ها</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form role="form" asp-controller="RestaurantCategory" asp-action="New" method="post">
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="Title"></label>
                                    <input type="text" class="form-control" name="Title">
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description"></label>
                                    <textarea class="form-control" rows="3" name="Description"></textarea>
                                </div>
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">ثبت</button>
                                <input class="btn btn-default" type="button" value="لغو و بازگشت"
                                       onclick="location.href='@Url.Action(indexAction, controller)'" />
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </div>
            </div>

        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>