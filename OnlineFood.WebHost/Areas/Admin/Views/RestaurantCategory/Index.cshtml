@using OnlineFood.Application.DTOs.RestaurantCategory
@using OnlineFood.WebHost.Areas.Admin.Controllers
@model List<RestaurantCategoryDTO>
@{
    var controller = nameof(RestaurantCategoryController).Replace("Controller", "");
    var newAction = nameof(RestaurantCategoryController.New);
    var deleteAction = nameof(RestaurantCategoryController.Delete);
    var editAction = nameof(RestaurantCategoryController.Edit);
}

<div class="content-wrapper" style="min-height: 265.6px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>مدیریت دسته بندی فروشنده ها</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="#">خانه</a></li>
                        <li class="breadcrumb-item active">مدیریت دسته بندی فروشنده ها</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header p-2">
                            <input class="btn btn-primary" type="button" value="ایجاد دسته بندی جدید"
                                   onclick="location.href='@Url.Action(newAction,controller)'" />
                        </div>
                        <!-- /.card-header -->
                        <div class="card-header">
                            <h3 class="card-title">لیست دسته بندی فروشنده ها</h3>

                            <div class="card-tools">
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    <input type="text" name="table_search" class="form-control float-right" placeholder="جستجو">

                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-0">
                            <table class="table table-hover">
                                <tr>
                                    <th>شناسه</th>
                                    <th>عنوان</th>
                                    <th>توضیحات</th>
                                    <th>تاریخ</th>
                                    <th>تعداد فروشنده</th>
                                    <th>عملیات</th>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.CreateDate</td>
                                        <td>0</td>
                                        <td>
                                            <input class="btn btn-warning" type="button" value="ویرایش"
                                                   onclick="location.href='@Url.Action(editAction, controller, new { Id = item.Id })'" />

                                            <input class="btn btn-danger" type="button" value="حذف"
                                                   onclick="location.href='@Url.Action(deleteAction, controller,new{Id=item.Id})'" />
                                        </td>
                                    </tr>
                                }

                            </table>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer clearfix">
                            <ul class="pagination pagination-sm m-0 float-right">
                                <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                            </ul>
                        </div>
                    </div>
                    <!-- /.card -->
                </div>
            </div>

        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>