@using OnlineFood.Application.DTOs.Cities
@using OnlineFood.WebHost.Areas.Admin.Controllers
@model CityDTO
@{
    var controller = nameof(CityController).Replace("Controller", "");
    var indexAction = nameof(CityController.Index);
}

<div class="content-wrapper" style="min-height: 265.6px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>شهر</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="#">خانه</a></li>
                        <li class="breadcrumb-item active">شهر</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="container-fluid">

            <div class="row">
                <div class="col-md-8">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">شهر</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form role="form" asp-controller="City" asp-action="New" method="post">
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="Province.Name"></label>
                                    <input type="text" class="form-control" name="ProvinceName" value="@Model.Province.Name" disabled>
                                    @Html.HiddenFor(x => x.ProvinceId)
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="Name"></label>
                                    <input type="text" class="form-control" name="Name">
                                </div>
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">ثبت</button>
                                <input class="btn btn-default"type="button" value="لغو و بازگشت"
                                       onclick="location.href='@Url.Action(indexAction, controller)'" />
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </div>
            </div>

        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>