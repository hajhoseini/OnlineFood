@model OnlineFood.Application.DTOs.Customers.CustomerDTO

<div class="card card-warning col-md-9">
    <div class="card-header">
        <h3 class="card-title">اطلاعات من</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <form role="form" method="post" asp-controller="Customer" asp-action="Edit">

            <div class="form-group">
                <label>شناسه</label>
                <input type="text" class="form-control" id="Id" name="Id" asp-for="Id" disabled>
            </div>

            <div class="form-group">
                <label>نام</label>                
                <input type="text" class="form-control" id="FirstName" name="FirstName" asp-for="FirstName" placeholder="نام را وارد کنید" autocomplete="on">
            </div>

            <div class="form-group">
                <label>نام خانوادگی</label>
                <input type="text" class="form-control" id="LastName" name="LastName" asp-for="LastName" placeholder="نام را وارد کنید" autocomplete="on">
            </div>

            <div class="form-group">
                <label>شماره موبایل</label>
                <input type="text" class="form-control" id="MobileNumber" name="MobileNumber" asp-for="MobileNumber" placeholder="شماره موبایل" required="required">
            </div>

            <div class="form-group">
                <label>ایمیل</label>
                <input type="text" class="form-control" id="Email" name="Email" asp-for="Email" placeholder="ایمیل را وارد کنید" autocomplete="on">
            </div>

            <div class="form-group">
                <label>تلفن ثابت</label>
                <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" asp-for="PhoneNumber" placeholder="تلفن ثابت را وارد کنید" autocomplete="on">
            </div>

            <div class="row">
                <div class="col-2">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">ثبت</button>
                </div>
            </div>            

        </form>
    </div>
    <!-- /.card-body -->
</div>